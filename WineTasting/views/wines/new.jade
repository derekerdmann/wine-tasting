extends ../layout

block content
  div.large-9.columns.large-centered
    h1 Add a wine

    form(method="POST", action="/wine")
        
      fieldset
        legend Wine information

        div.row
          div.large-12.columns
            label(for="winery") Winery
            input(type="text", id="winery", name="winery")

        div.row
          div.large-12.columns
            label(for="name") Name
            input(type="text", id="name", name="name")

        div.row
          div.large-12.columns
            label(for="grape") Grape
            input(type="text", id="grape", name="grape")

        div.row
          div.large-4.columns
            label(for="vintage") Vintage
            input(type="text", id="vintage", name="vintage")

          div.large-4.columns
            label(for="price") Price
            input(type="text", id="price", name="price")

          div.large-4.columns
            label(for="abv") ABV
            input(type="text", id="abv", name="abv")

        div.large-12.columns
          input(type="submit", value="Add wine").button
